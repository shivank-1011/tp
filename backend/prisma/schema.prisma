generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Author {
  id           Int      @id @default(autoincrement())
  first_name   String
  family_name  String
  date_of_birth DateTime?
  date_of_death DateTime?
  name         String
  lifespan     String
  url          String
  books        Book[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String
  url   String
  books Book[]
}

model Book {
  id       Int     @id @default(autoincrement())
  title    String
  summary  String
  ISBN     String
  url      String
  authorId Int
  author   Author  @relation(fields: [authorId], references: [id])
  genres   Genre[]
}
